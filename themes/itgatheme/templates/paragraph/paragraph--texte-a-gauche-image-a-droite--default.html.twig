{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<div{{ attributes.addClass(classes) }}>
    <div class="text">
        {{ content.field_texte|field_value }}
    </div>
    <div class="image">
        {% if content.field_image['#items'].entity.uri.value is not empty %}
            <img src="{{ file_url(content.field_image['#items'].entity.uri.value) }}" width="150" style="float:left;" />
        {% endif %}
    </div>
</div>